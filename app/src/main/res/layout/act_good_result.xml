<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/act_setting_ln_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/act_good_result_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/frag_personal_left"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:textSize="16sp"
            android:text="商品分类"
            />
        <TextView
            android:id="@+id/act_good_result_tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜单"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorFont"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_goods_result_ln_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <GridView
            android:id="@+id/act_goods_result_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="2" />
    </LinearLayout>
</LinearLayout>