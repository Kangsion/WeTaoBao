<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/act_goods_result_gv_item_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/bookbag"/>
    <TextView
        android:id="@+id/act_goods_result_gv_item_tv_name"
        android:layout_marginTop="5dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorFont"
        android:textSize="14sp"
        android:text="超级无敌大书包"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/act_goods_result_gv_item_tv_money"
        android:layout_width="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="#FF7932"
        android:textSize="14sp"
        android:text="¥ 59.00"/>

        <TextView
            android:id="@+id/act_good_result_tv_fukuanNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="人已付款" />

    </LinearLayout>
</LinearLayout>