<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/frag_login_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/frag_personal_left"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:textSize="16sp"
            android:text="淘宝账户登录"
            />
          <TextView
              android:id="@+id/frag_login_tv_help"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="帮助"
              android:layout_marginRight="5dp"
              android:textColor="@color/colorFont"
              />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLine" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorFont"
            />

          <EditText
              android:id="@+id/frag_login_tv_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="50dp"
              android:textColorHint="#cccc"
              android:hint="邮箱、手机号、会员名"
              />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textColor="@color/colorFont" />

        <EditText
            android:id="@+id/frag_login_tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColorHint="#cccc"
            android:hint="请输入密码"
            android:inputType="textPassword" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorLine" />
    <TextView
        android:id="@+id/frag_login_tv_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="登录"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/seletor_frag_login_btn_login"
        android:textColor="#ffffff" />
    <TextView
        android:id="@+id/frag_login_tv_upassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="25dp"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorFont"
        />
    <TextView
        android:id="@+id/frag_login_tv_rigster"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="免费注册"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/colorSelectedIcon" />
</LinearLayout>