<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/act_myorder_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:src="@drawable/frag_personal_left"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFont"
            android:textSize="16sp"
            android:text="我的订单"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorFont"
            />
    </LinearLayout>

    <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorBottom"
        android:layout_height="50dp">
        <Button
            android:id="@+id/act_myOrder_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:layout_marginTop="5dp"
            android:text="全部"
            android:textColor="@drawable/selector_act_home_btn_text_color"

            />
        <Button
            android:id="@+id/act_myOrder_fuKan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:layout_marginTop="5dp"
            android:text="代付款"
            android:textColor="@drawable/selector_act_home_btn_text_color"
           />
        <Button
            android:id="@+id/act_myOrder_faHuo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:layout_marginTop="5dp"
            android:text="代发货"
            android:textColor="@drawable/selector_act_home_btn_text_color" />
        <Button
            android:id="@+id/act_myOrder_shoHuo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:layout_marginTop="5dp"
            android:text="待收货"
            android:textColor="@drawable/selector_act_home_btn_text_color" />

        <Button
            android:id="@+id/act_myOrder_pinJia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparency"
            android:layout_marginTop="5dp"
            android:text="待评价"
            android:textColor="@drawable/selector_act_home_btn_text_color" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/act_myorder_viewpager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>