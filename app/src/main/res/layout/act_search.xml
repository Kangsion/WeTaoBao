<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorTop"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/act_search_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@drawable/frag_personal_left" />
        <EditText
            android:id="@+id/act_search_context"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textColor="@color/colorFont"
            android:textSize="20sp"
            android:background="@color/colorBackground"
            android:layout_marginLeft="10dp"
            android:hint="双十一热卖" />
        <TextView
            android:id="@+id/act_search_tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_shape"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorFont" />
    </LinearLayout>

    <GridView
        android:id="@+id/act_search_result_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2" />
</LinearLayout>