<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/act_setting_ln_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@color/colorBackground"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/frag_personal_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorFont" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorFont"
            android:gravity="center"
            android:textSize="16sp"
            android:text="我的淘宝" />
        <ImageView
            android:id="@+id/frag_personal_iv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/frag_we_msg" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="120dp"
             android:orientation="vertical"
             android:gravity="center"
             android:background="@drawable/frag_personal_topbg">
             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/frag_personal_iv_head"
                 android:layout_width="50dp"
                 android:layout_height="50dp"
                 android:src="@drawable/default_head" />

             <TextView
                 android:id="@+id/frag_personal_tv_nick_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="abc"
                 android:textColor="#ffffff" />
         </LinearLayout>
         <RelativeLayout
             android:id="@+id/frag_personal_rl_show_dingdan"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="我的订单"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:drawableRight="@drawable/frag_home_right"
                 android:textColor="#C6C3BF"
                 android:text="查询全部订单"/>
         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorLine" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:orientation="horizontal">

             <Button
                 android:id="@+id/frag_personal_btn_pay"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:background="@color/colorTransparency"
                 android:layout_marginTop="5dp"
                 android:text="代付款"
                 android:textColor="@drawable/selector_act_home_btn_text_color"
                 android:drawableTop="@drawable/frag_my_pay" />
             <Button
                 android:id="@+id/frag_personal_btn_daifahuo"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:background="@color/colorTransparency"
                 android:layout_marginTop="5dp"
                 android:text="代发货"
                 android:textColor="@drawable/selector_act_home_btn_text_color"
                 android:drawableTop="@drawable/frag_my_fahuo" />
             <Button
                 android:id="@+id/frag_personal_btn_daishouhuo"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:background="@color/colorTransparency"
                 android:layout_marginTop="5dp"
                 android:text="待收货"
                 android:textColor="@drawable/selector_act_home_btn_text_color"
                 android:drawableTop="@drawable/frag_my_shouhuo" />
             <Button
                 android:id="@+id/frag_personal_btn_daipingjia"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:background="@color/colorTransparency"
                 android:layout_marginTop="5dp"
                 android:text="待评价"
                 android:textColor="@drawable/selector_act_home_btn_text_color"
                 android:drawableTop="@drawable/frag_my_pingjia" />
             <Button
                 android:id="@+id/frag_personal_btn_tuikuan"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:background="@color/colorTransparency"
                 android:layout_marginTop="5dp"
                 android:text="退款/售后"
                 android:textColor="@drawable/selector_act_home_btn_text_color"
                 android:drawableTop="@drawable/frag_my_tuikuan" />
         </LinearLayout>

         <RelativeLayout
             android:id="@+id/frag_personal_rl_show_jianzhi"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="10dp">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="必备工具"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:drawableRight="@drawable/frag_home_right"
                 android:textColor="#C6C3BF"
                 android:text="兼职赚钱点这里"/>
         </RelativeLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorLine" />

         <com.example.ksion.wetaobao.widget.SourcePanel
             android:id="@+id/frag_personal_gv_center"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:horizontalSpacing="0.0dip"
             android:listSelector="@null"
             android:numColumns="4"
             android:scrollbars="none"
             android:stretchMode="columnWidth" />

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorLine" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_margin="10dp"
             android:text="我的互动"
             android:textColor="#bf000000"
             android:textSize="15sp" />

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/colorLine" />

         <com.example.ksion.wetaobao.widget.SourcePanel
             android:id="@+id/frag_personal_gv_bottom"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:horizontalSpacing="0.0dip"
             android:listSelector="@null"
             android:numColumns="4"
             android:scrollbars="none"
             android:stretchMode="columnWidth" />
     </LinearLayout>

    </ScrollView>
</LinearLayout>