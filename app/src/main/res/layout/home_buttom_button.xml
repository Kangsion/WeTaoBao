<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/colorBottom"
    android:layout_height="50dp">
    <Button
        android:id="@+id/home_btn_home"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:layout_marginTop="5dp"
        android:text="首页"
        android:textColor="@drawable/selector_act_home_btn_text_color"
        android:drawableTop="@drawable/selector_act_home_btn_home"
        />
    <Button
        android:id="@+id/home_btn_we"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:layout_marginTop="5dp"
        android:text="微淘"
        android:textColor="@drawable/selector_act_home_btn_text_color"
        android:drawableTop="@drawable/selector_act_home_btn_we"/>
    <Button
        android:id="@+id/home_btn_ask"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:layout_marginTop="5dp"
        android:text="问大家"
        android:textColor="@drawable/selector_act_home_btn_text_color"
        android:drawableTop="@drawable/selector_act_home_btn_ask"/>
    <Button
        android:id="@+id/home_btn_shopcar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:layout_marginTop="5dp"
        android:text="购物车"
        android:textColor="@drawable/selector_act_home_btn_text_color"
        android:drawableTop="@drawable/selector_act_home_btn_shop_car"/>
    <Button
        android:id="@+id/home_btn_my"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/colorTransparency"
        android:layout_marginTop="5dp"
        android:text="我的淘宝"
        android:textColor="@drawable/selector_act_home_btn_text_color"
        android:drawableTop="@drawable/selector_act_home_btn_my"/>
</LinearLayout>